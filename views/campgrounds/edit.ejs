<% layout('layouts/template') %>

    <div class="row">
        <h1 class="text-center">Edit Campground: <%= campground.name %>
        </h1>
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id='name' name='campground[name]' value="<%=campground.name  %>"
                    required>
                <div class="invalid-feedback">This is a required field.</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id='description' name='campground[description]'
                    required><%= campground.description %></textarea>
                <div class="invalid-feedback">This is a required field.</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id='location' name='campground[location]'
                    value="<%= campground.location %> " required>
                <div class="invalid-feedback">This is a required field.</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price" required>Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" aria-label="price" name="campground[price]" required
                        value="<%=campground.price %>" min=0>
                    <div class="invalid-feedback">Enter a number greater than or equal to 0.</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add Image(s)</label>
                <input class="form-control" type="file" id="image" name='image' multiple>
            </div>
            <div class="mb-3 img-thumbnail">
                <% campground.images.forEach((img, i)=> { %>
                    <img src="<%= img.thumbnail %> " alt="" id="image-<%=i%>">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                            value="<%=img.filename%>">
                        <label class=" form-check-label" for="image-<%=i%>">
                            Delete
                        </label>
                        <% }) %>
                    </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <form class="d-inline" action="/campgrounds/<%= campground._id %> ">
            <button class="btn btn-light">Back</button>
        </form>
    </div>